{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "react-app",
        "prettier"
    ],
    "plugins": [
        "react",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 2018
   },
   "rules": {
       "prettier/prettier": [
           "warning",
           {
            "printWidth": 80,
            "trailingComma": "es5",
            "semi": false,
            "jsxSingleQuote": true,
            "singleQuote": true,
            "useTabs": true
           }
       ]
   }
}